{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "ASimpleTutor": "Debug"
    }
  },
  "Test": {
    "DataPath": "tests/datas/hello-agents",
    "OutputPath": "tests/results",
    "UseMockLLM": false
  },
  "Llm": {
    "ApiKey": "${env:OPENAI_API_KEY}",
    "BaseUrl": "https://api.openai.com/v1",
    "Model": "gpt-4"
  },
  "Sectioning": {
    "TargetLength": 2000,
    "MinLength": 300,
    "MaxLength": 5000,
    "SizeThresholds": {
      "Small": 3000,
      "Medium": 10000
    },
    "StrategyWeights": {
      "TargetLengthMatch": 2.5,
      "AvoidTooFine": 0.3,
      "AvoidTooCoarse": 2.0,
      "LevelContinuity": 0.3,
      "MinDepthFirst": 0.3
    }
  }
}
